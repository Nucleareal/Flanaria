<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="window_pref" parent="@style/window">
		<item name="android:background">@drawable/listview_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
	<style name="window" parent="@android:style/Theme.Black">
		<item name="android:windowTitleBackgroundStyle">@style/color</item>
		<item name="android:windowTitleSize">28dp</item>
   		<item name="android:windowTitleStyle">@style/myTitleAppearance</item>
	</style>
	<style name="color">
        <item name="android:background">@drawable/title_gradation</item>
    </style>
	<style name="myTitleAppearance" parent="@android:style/TextAppearance">
	    <item name="android:shadowColor">#DF1F0000</item>
	    <item name="android:shadowRadius">2.75</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:typeface">sans</item>
	    <item name="android:paddingLeft">5dp</item>
	</style>
	
	
	<style name="CustomTheme.Black" parent="@android:attr/theme">
	    <item name="android:listSelector">@style/CustomListView</item>
	</style>
	<style name="CustomListView" parent="@android:style/Widget.ListView">
	    <item name="android:background">@drawable/listview_selector</item>
	   	<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
</resources>
